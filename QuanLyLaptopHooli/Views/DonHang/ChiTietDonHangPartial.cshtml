@model IEnumerable<QuanLyLaptopHooli.Models.chitietdonhang>

<h2>CHI TIẾT ĐƠN HÀNG</h2>

<table class="table table-hover">
    <thead style="text-align: center;">
        <tr>
            <th>
                Tên sản phẩm
            </th>
            <th style="width: 200px;">
                Số lượng
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Thành tiền
            </th>

            <th></th>
        </tr>
    </thead>

    <tbody style="text-align: center;">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sanpham.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td style="text-align: justify;">
                    @*@Html.Raw(Truncate(item.DiaChiGiaoHang, 70).ToString())*@

                    @Html.FormatValue(item.sanpham.Gia, "{0:#,##0}")VNĐ
                </td>
                <td>
                    @Html.FormatValue(item.GiaTien, "{0:#,##0}")VNĐ
                </td>

            </tr>
        }
    </tbody>
</table>
