@model QuanLyLaptopHooli.Models.thuonghieu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN THƯƠNG HIỆU</h2>

@using (Html.BeginForm("Edit", "ThuongHieu", FormMethod.Post, new { @enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Mã thương hiệu:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="iMaTH" value="@Model.id" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tên thương hiệu:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="sTenTH" value="@Model.ten" required />
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">Logo:</label>
        <div class="col-md-10">
            <input type="file" name=" fFileUpload" />
            <img src="@Model.hinhanh" width="120">(Ảnh hiện tại)
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU THÔNG TIN" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("vỀ TRANG QUẢN LÝ SẢN PHẨM", "Index")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
